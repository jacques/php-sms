{
    "name": "jacques/php-sms",
    "description": "SMS Wrappers for various service providers extracted from Hydra and modernised to use GuzzleHttp\\Client",
    "keywords": [
        "sms",
        "kannel",
        "smsportal",
        "messagehub",
        "panaceamobile",
        "clickatell"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jacques Marneweck",
            "email": "jacques@powertrip.co.za"
        }
    ],
    "require": {
        "php": ">=7.3.0",
        "guzzlehttp/guzzle": "^6.5 || ^7.2",
        "psr/log": "^1.1"
    },
    "require-dev": {
        "brick/varexporter": "^0.3.5",
        "ergebnis/composer-normalize": "^2.18",
        "friendsofphp/php-cs-fixer": "^3.4",
        "mockery/mockery": "^1.0",
        "monolog/monolog": "^2.3",
        "php-vcr/php-vcr": "^1.5",
        "php-vcr/phpunit-testlistener-vcr": "^3.2",
        "phpunit/php-invoker": "^3.1",
        "phpunit/phpunit": "^9.5",
        "rector/rector": "^0.12.8",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.15"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Jacques\\SMS\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jacques\\SMS\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=PSR2 ./src",
        "test": "phpunit --debug --verbose --configuration=tests/phpunit.xml"
    }
}
